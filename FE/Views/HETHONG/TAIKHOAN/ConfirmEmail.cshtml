@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding: 20px">
    <div class="container" style="background-color: white; padding: 20px; text-align: center; border-radius: 20px">
        <img width="160" height="160" src="~/image/DungChung/EmailIcon.png" alt="new-post" />
        <h2 style="font-weight: bold; margin: 20px 0">Thông báo</h2>
        <div>
            @if (ViewBag.IsSuccess)
            {
                <p>
                    Email của bạn đã xác thực thành công
                    <br />Bây giờ bạn có thể <a href="@Url.Action("Login", "TaiKhoan")" style="color: #222831; font-weight: bold; text-decoration: none">Đăng nhập</a> vào hệ thống</p>
            }
            else
            {
                <p>Email của bạn đã xác thực không thành công<br />@ViewBag.Message</p>
            }
        </div>
    </div>
</div>