@model MODELS.HETHONG.TAIKHOAN.Requests.PostLoginRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #mainContent{
        background:url('@Url.Content("~/image/Background/BackgroundAccount.jpg")') no-repeat center;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-center m-auto">
        <div class="card">
            <div class="card-header d-flex justify-content-center align-content-center">
                <p style="margin: 20px 10px; font-size: 28px; font-weight: bold; ">Đăng nhập</p>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "TaiKhoan", FormMethod.Post, new { id = "frmLogin", style = "width: 400px", @class = "bg-white" }))
                {
                    @if ((bool)ViewBag.IsError)
                    {
                        <div class="alert alert-danger">
                            <button class="close" data-close="alert"></button>
                            <span> @ViewBag.Message </span>
                        </div>
                    }
                    <!-- Email input -->
                    <div data-mdb-input-init class="input-group mb-3">
                        <span class="input-group-text" id="inputUsername">
                            <i class="far fa-envelope"></i>
                        </span>
                        <input required type="email" id="form2Example1" class="form-control" aria-label="Username" aria-describedby="inputUsername" asp-for="Username" />
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="input-group mb-3">
                        <span class="input-group-text" id="inputPassword">
                            <i class="far fa-envelope"></i>
                        </span>
                        <input required type="password" id="form2Example1" class="form-control" aria-label="Password" aria-describedby="inputPassword" asp-for="Password" />
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <!-- 2 column grid layout for inline styling -->
                    <div class="row mb-4">
                        <div class="col d-flex justify-content-center">
                            <!-- Checkbox -->
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@Model.RememberMe" id="form2Example31" asp-for="RememberMe" />
                                <label class="form-check-label" for="form2Example31">Ghi nhớ tôi</label>
                            </div>
                        </div>

                        <div class="col">
                            <!-- Simple link -->
                            <a href="#!">Forgot password?</a>
                        </div>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Đăng nhập</button>

                    <!-- Register buttons -->
                    <div class="text-center">
                        <p>Not a member? <a href="@Url.Action("Register", "TaiKhoan")">Đăng ký</a></p>
                        <p>or sign up with:</p>
                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-facebook-f"></i>
                        </button>

                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-google"></i>
                        </button>

                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-twitter"></i>
                        </button>

                        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
                            <i class="fab fa-github"></i>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script>
    $.document.ready(function () {
        $("#frmLogin").submit(event => {
            event.preventDefault();
            var data = $("#frmLogin").serialize();
            $.ajax({
                url: "@Url.Action("Login", "TaiKhoan")",
                type: "POST",
                data: data,
                success: function (response) {
                    if (response.success) {
                        window.location.href = "/Home/Index"
                    } else {

                    }
                }
            })
        })
    });
</script>